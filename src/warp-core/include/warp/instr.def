// The Warp instruction set is defined throught the WARP_OP() X-macro
//
// To use it in a format not already provided in warp/instr.h, define WARP_OP(code) and include
// this file.

#ifndef WARP_OP
#define WARP_OP(opcode, args, stack)
#define WARP_OP_NOTHING
#endif

WARP_OP(CONST, 1, 1)
WARP_OP(DEF_GLOB, 1, 0)
WARP_OP(GET_GLOB, 1, 1)
WARP_OP(SET_GLOB, 1, 0)

WARP_OP(GET_LOCAL, 1, 1)
WARP_OP(SET_LOCAL, 1, 0)

WARP_OP(DUP, 0, 1)
WARP_OP(POP, 0, -1)
WARP_OP(BLOCK, 1, 0)

WARP_OP(NIL, 0, 1)
WARP_OP(TRUE, 0, 1)
WARP_OP(FALSE, 0, 1)

WARP_OP(NEG, 0,  0)
WARP_OP(ADD, 0, -1)
WARP_OP(SUB, 0, -1)
WARP_OP(MUL, 0, -1)
WARP_OP(DIV, 0, -1)
WARP_OP(POW, 0, -1)

WARP_OP(NOT, 0, 0)
WARP_OP(LT, 0, -1)
WARP_OP(GT, 0, -1)
WARP_OP(LTEQ, 0, -1)
WARP_OP(GTEQ, 0, -1)
WARP_OP(EQ, 0, -1)

WARP_OP(JMP, 2, 0)
WARP_OP(JMP_FALSE, 2, 0)

WARP_OP(PRINT, 0, 0)
WARP_OP(RETURN, 0, 0)
    
#ifdef WARP_OP_NOTHING
#undef WARP_OP
#undef WARP_OP_NOTHING
#endif
